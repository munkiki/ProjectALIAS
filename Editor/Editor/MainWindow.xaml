<Window x:Class="Editor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Editor"
        mc:Ignorable="d"
        Title="MAS Mega Text Editor" Height="300" Width="600" Background="Black">
    <StackPanel  VerticalAlignment="Top">
        
        <TextBox Name="TextBox1"  Height="150" AcceptsReturn="True" AcceptsTab="True" TextWrapping="Wrap" Canvas.Top="50" Canvas.Left="50" Background="White"/>
        <Button x:Name="Save" VerticalAlignment="Top" HorizontalAlignment="Left" Click="SaveTextAsFile" Content="Save Text into File"/>
        <Button x:Name="Open" VerticalAlignment="Top" HorizontalAlignment="Left" Click="OpenFile" Content="Open Text from File"/>
    </StackPanel>
</Window>
